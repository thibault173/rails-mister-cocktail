<h1>Cocktails</h1>

<h2>Search a cocktail</h2>

<form>
  <input name="query" type="search" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>

<hr>
<%= params[:query] == "" ? "All cocktails" : "Cocktails with query \"#{params[:query]}\"" %>
<ul>
  <% @cocktails.each do |cocktail| %>
   <li> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
  <% end %>
</ul>

<%= link_to "Add a cocktail", new_cocktail_path %>




